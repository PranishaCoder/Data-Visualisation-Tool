<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<StackPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginController" styleClass="root">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

    <VBox alignment="CENTER" spacing="15.0" styleClass="form-container">
        <Label text="Login" styleClass="form-title" />
        <TextField fx:id="usernameField" promptText="Username" styleClass="form-input" />
        <PasswordField fx:id="passwordField" promptText="Password" styleClass="form-input" />
        <Button text="Login" onAction="#handleLogin" styleClass="form-button" />
        <Button text="Don't have an account? Sign Up" onAction="#handleSignupRedirect" styleClass="link-button" />
    </VBox>
</StackPane> 